\section{L'\'Etude de l'existant}
\subsection{Le fonctionnement}
\begin{frame}{La classe \texttt{TTranslator}}
    \begin{itemize}
        \item Appel avec un singleton
        \item Méthode de traduction : \texttt{getTranslation(ID\_RES : string)}
        \item Constantes en base de donnée
        \item Traduction inexistante $\Rightarrow$ Appel de l'API Google Translate
    \end{itemize}
\end{frame}
\begin{frame}{La base de données}
    \begin{figure}
        \centering
        \input{images/bdExistant.tex}
        \caption{Table RES\_Translations}
    \end{figure}
    \begin{description}
        \item[ID\_RES] Nom de constante.
        \item[Language] La langue en ISO-639 (fr, en ou es)
        \item[TranslatedText] La valeur de traduction
        \item[Valide] Traduction correct (0 ou 1)
    \end{description}
\end{frame}
\begin{frame}{Exemple de traduction}
\lstinputlisting[language=PHP, numbers=none, caption=Exemple d'appels de getTranslation]{images/appelTTranslatorGetTranslation.php}

Affiche \texttt{Accueil} si la langue est française
\end{frame}
\subsection{Les problèmes}
\begin{frame}{Le problème : les développeurs}
    \begin{description}
    \item[Redondance]
         Beaucoup de constantes\\ $\Rightarrow$ Recherche difficile\\ $\Rightarrow$ Création d'une nouvelle constante plutôt que chercher son existante
         \pause
    \item[378 champs non valides] GoogleTranslate remplit la bd automatiquement \\
    $\Rightarrow$ Beaucoup de champs non valide\\ $\Rightarrow$ Trop nombreux pour les valider\\$\Rightarrow$ Base de donnée altéré
        \pause
    \item[Beaucoup de ''phrases en dur``] Certains développeurs, plutôt que de créer une nouvelle constante, faisait passer une chaîne de caractère en paramètre
    \end{description}
\end{frame}
\begin{frame}{Le problème : le système}
    \begin{description}
        \item[Base de données altéré] La base est devenue incontrôlable.
        \pause
        \item[Redondance] Des mots reviennent souvent dans des traductions et sont ainsi traduits des dizaines de fois.
        \pause
        \item[Variables] Problème en cas de valeurs variables dans une traduction
    \end{description}
\end{frame}
\section{Les solutions proposés}
\begin{frame}{Les Solutions}
    \begin{description}
        \item[Un métalangage] : Permettre d'inclure des constantes ou des variables
        \item[Un outil externe] : Permettre la recherche, la traduction et accélérer le travail du développeur
    \end{description}
\end{frame}
\subsection{Le nouveau moteur}
\begin{frame}{Nouvelle base de données}
    \begin{figure}
        \centering
        \input{images/bdNouvelle.tex}
        \caption{Table RES\_dicoLanguage}
    \end{figure}

\end{frame}
\begin{frame}{Le métalangage}
    \begin{description}
        \item[Constantes] Ajouter dans une valeur [TRANS\_CONSTANTE]
        \pause
        \item[Variables] Ajouter dans une valeur <nomVar>, appel avec \texttt{getTranslation(id, var1, var2,\ldots)}
                    \pause
        \item[Pluriel/singulier] Si variable numériques, dans une valeur (singulier|pluriel).
                \pause
        \item[Valeur longue ou courte] \texttt{\#SHORT\#} ou \texttt{\#LONG\#} dans l'ID. Si rien n'est précisé ou si la valeur est inexistante : valeur classique.
    \end{description}
\end{frame}
\begin{frame}{Exemple d'utilisation}
    \begin{description}
        \item[ID\_RES]\texttt{Données [TRANS\_GENERAL\_DATA]}
        \item[TranslatedText] \texttt{Données [TRANS\_GENERAL]}
        				\lstinputlisting[language=PHP, numbers=none]{images/exempleConstantes.php}
        \item[Affichage] \texttt{Données générales}
    \end{description}
    \hrulefill
    \pause
    \begin{description}
        \item[ID\_RES]\texttt{Données [TRANS\_NB\_RINGINGS]}
        \item[TranslatedText] \texttt{<nbSonneries> sonneri(e|es)}
        				\lstinputlisting[language=PHP, numbers=none]{images/exemplePlurOrSing.php}	
        \item[Affichage] \texttt{Données générales}
    \end{description}
\end{frame}
\subsection{L'outil de traduction}
\begin{frame}{Technologies choisis}
        \textbf{Le client}:
    \begin{description}
        \item[Adobe AIR] Application native avec technologies Web
        \item[JavaScript] Interroger le serveur -- Rechargement rapide.
        \item[HTML/CSS] Contenu et mise en forme
    \end{description}
    \pause
    \vspace{20px}
    \textbf{Le serveur}:
    \begin{description}
        \item[PHP] Interroger la base de données
        \item[MySQL] Base de donnée de AUDITELcom
    \end{description}
\end{frame}
